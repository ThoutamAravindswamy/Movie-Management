	ticket.orderByDesc('sys_created_on');
	ticket.setLimit(1);
	ticket.query();
	alert('Working');
	var movieName;
	var tickets;
	while(ticket.next()){
		alert('While loop entered');
		movieName = ticket.getValue('movies');
		tickets = ticket.getValue('no_of_tickets');
	}
	theatre.addQuery('movie_name',movieName);
	var seatsAvailable;
	while (theatre.next()){
